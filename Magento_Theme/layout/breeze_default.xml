<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
      <referenceBlock name="breeze.js">
        <arguments>
          <argument name="bundles" xsi:type="array">
            <item name="product-configurable" xsi:type="array">
              <item name="items" xsi:type="array">
                <item name="stigefabrikken-mixins" xsi:type="array">
                  <item name="path" xsi:type="string">js/breeze/mixins</item>
                  <item name="mixins" xsi:type="array">
                    <item name="configurable" xsi:type="string">configurable</item>
                  </item>
                </item> 
                <!-- Add this lines to disable the stock qty by Client request --> 
                <item name="configurableVariationQty" xsi:type="boolean">false</item>
                <item name="Magento_InventoryConfigurableProductFrontendUi/js/configurable" xsi:type="boolean">false</item>
              </item>
            </item>
          </argument>
        </arguments>
      </referenceBlock>
    </body>
</page>


